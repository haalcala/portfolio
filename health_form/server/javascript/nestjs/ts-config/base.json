{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "types": ["jest", "node"],
    "typeRoots": [
      "../src/@types",
      "../node_modules/@types"
    ],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es2017", "esnext.asynciterable", "dom"],
    "resolveJsonModule": true
  }
}
